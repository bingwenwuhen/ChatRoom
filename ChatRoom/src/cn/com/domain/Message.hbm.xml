<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="cn.com.domain.Message" table="message">
		<id name="id" type="java.lang.Integer">
			<column name="id"></column>
			<generator class="increment"></generator>
		</id>
		<property name="username" type="java.lang.String" length="20"></property>
		<property name="message" type="java.lang.String" length="200"></property>
		<property name="type" type="java.lang.String" length="20"></property>
		<property name="createTime" type="java.lang.String" length="50"></property>
		<property name="toPerson" type="java.lang.String" length="10"></property>
		<property name="UserId" type="java.lang.Integer"></property>
	</class>
</hibernate-mapping>