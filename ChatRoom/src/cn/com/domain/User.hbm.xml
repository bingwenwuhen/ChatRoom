<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="cn.com.domain.User" table="user">
		<id name="id" type="java.lang.Integer">
			<column name="id"></column>
			<generator class="increment"></generator>
		</id>
		<property name="username" type="java.lang.String" length="20"></property>
		<property name="password" type="java.lang.String" length="20"></property>
		<property name="createDate" type="java.lang.String" length="50"></property>
		<property name="sex" type="java.lang.String" length="2"></property>
		<property name="status" type="java.lang.String" length="10"></property>
		<property name="imageUrl" type="java.lang.String" length="20"></property>
	</class>
</hibernate-mapping>